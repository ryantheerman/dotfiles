### SPECIAL MODES ###

# application mode
# used to open specific applications for which I've set keybindings
mode "applications" {
        # These binding trigger as soon as you enter application mode

        # open firefox
        # dvorak 'f' for firefox
        bindcode 29 exec firefox; mode "default"

        # open zen (assigned elsewhere to always open on workspace 2)
        #bindsym z exec zen; exec xdotool key Hyper_R+2; mode "default"
        # dvorak 'z' for zen
        bindcode 61 exec zen; exec xdotool key Hyper_R+2; mode "default"
        
        # open vlc
        #bindsym v exec vlc; exec xdotool key Hyper_R+4; mode "default"
        # dvorak 'v' for vlc
        bindcode 60 exec vlc; exec xdotool key Hyper_R+4; mode "default"
        
        # open spotify
        #bindsym s exec spotify; exec xdotool key Hyper_R+0; mode "default"
        # dvorak 's' for spotify
#        bindcode 47 exec spotify; exec xdotool key Hyper_R+0; mode "default"

        # open intellij
        #bindsym i exec idea; exec ~/scripts/i3_ws3_layout.sh; mode "default"
        # dvorak 'i' for intellij
        bindcode 42 exec idea; exec ~/scripts/i3_ws3_layout.sh; mode "default"

        # open vscodium
        #bindsym c exec vscodium; exec xdotool key Hyper_R+6; mode "default"
        # dvorak 'c' for code
        bindcode 31 exec vscodium; exec xdotool key Hyper_R+5; mode "default"

        # back to normal: Enter or Escape or $mod+x
        bindsym Return mode "default"
        bindsym Escape mode "default"
        #bindsym $mod+x mode "default"
        # dvorak 'x'
        bindcode $mod+56 mode "default"

}

#bindsym $mod+x mode "application"
# dvorak 'x'
bindcode $mod+56 mode "applications"

# utility mode
# used for not often needed keyboard shortcuts
mode "utilities" {
        # these bindings trigger as soon as you enter utility mode

        # toggle redshift on and off
        #bindsym t exec pkill -USR1 '^redshift$'; mode "default"
        # dvorak 't' for temperature
        bindcode 45 exec pkill -USR1 '^redshift$'; mode "default"

        # toggle bluetooth on and off
        # dvorak 'b'
        bindcode 57 exec ~/scripts/toggle_bluetooth.sh; mode "default"

		# restart audio stack
		# dvorak 'a'
		bindcode 38 exec ~/scripts/restart-audio.sh; mode "default"

        # toggle active gpu (requires reboot)
        # dvorak 'g'
#        bindcode 30 exec ~/scripts/toggle-gpu.sh; mode "default"

        # toggle us standard and us dvorak keymap
        #bindsym k exec ~/scripts/kb_layout.sh; mode "default"
        # dvorak 'k' for keymap
        bindcode 55 exec ~/scripts/kb_layout.sh; mode "default"

        # trigger display check and apply display config depending on connected outputs
        #bindsym d exec ~/scripts/startup_display.sh; mode "default"
        # dvorak 'd' for display
        bindcode 43 exec ~/scripts/display.sh; mode "default"

		# experimental brightness control
		# dvorak ','
		bindcode 25 exec $HOME/scripts/brightness.sh down && $refresh_i3status
		# dvorak '.'
		bindcode 26 exec $HOME/scripts/brightness.sh up && $refresh_i3status

        # screenshot tool
        #bindsym p exec flameshot gui; mode "default"
        # dvorak 'p' for print screen
        bindcode 27 exec flameshot gui; mode "default"

        # power profiles
        bindsym 1 exec ~/scripts/power-profile.sh power-saving; mode "default"
        bindsym 2 exec ~/scripts/power-profile.sh balanced; mode "default"
        bindsym 3 exec ~/scripts/power-profile.sh performance; mode "default"

		# screen brightness toggle
		bindsym 4 exec ~/scripts/toggle-brightness.sh; mode "default"

		# copy url from zen browser and open in firefox
		bindcode 41 exec ~/scripts/zen-to-firefox-move-tab.sh; mode "default"

        # back to normal: Enter or Escape or $mod+c
        bindsym Return mode "default"
        bindsym Escape mode "default"
        #bindsym $mod+u mode "default"
        # dvorak 'u'
        bindcode $mod+41 mode "default"

}

#bindsym $mod+u mode "utility"
# dvorak 'u'
bindcode $mod+41 mode "utilities"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        #bindsym h resize shrink width 10 px or 10 ppt
        #bindsym t resize grow height 10 px or 10 ppt
        #bindsym n resize shrink height 10 px or 10 ppt
        #bindsym s resize grow width 10 px or 10 ppt

        # dvorak 'h'
        bindcode 44 resize shrink width 1 px or 1 ppt
        # dvorak 't'
        bindcode 45 resize grow height 1 px or 1 ppt
        # dvorak 'n'
        bindcode 46 resize shrink height 1 px or 1 ppt
        # dvorak 's'
        bindcode 47 resize grow width 1 px or 1 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        #bindsym $mod+r mode "default"
        #dvorak 'r'
        bindcode $mod+32 mode "default"
}

#bindsym $mod+r mode "resize"
#dvorak 'r'
bindcode $mod+32 mode "resize"

