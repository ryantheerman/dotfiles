alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# output usage stats for the drives I care about
alias dfx='df -H -x tmpfs -x efivarfs'


# vcs trigger to add dotfile to git tracked repo
alias git-dotfiles="/usr/bin/git --git-dir=$HOME/projects/bare-repos/.dotfiles --work-tree=$HOME"
alias git-scripts="/usr/bin/git --git-dir=$HOME/projects/bare-repos/.scripts --work-tree=$HOME/scripts"
alias git-notes="/usr/bin/git --git-dir=$HOME/projects/bare-repos/.notes --work-tree=$HOME/notes"
alias git-pacman="/usr/bin/git --git-dir=$HOME/projects/bare-repos/.pacman --work-tree=/etc/pacman.d/hooks"

# set active gpu to integrated gpu
alias gpui='sudo envycontrol -s integrated'

# set active gpu to discrete gpu
alias gpud='sudo envycontrol -s nvidia'

# sudo with environment configs
alias sudo='sudo -E'

# for procuring an ip from the dhcp server on the enp0s31f6 interface
alias net-restart='restart-network.sh'

# spotify tui
alias spotify='ncspot'

