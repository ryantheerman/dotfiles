### TMUX INSTANCES ###
# run main-tmux.sh
alias mt="main-tmux.sh"

# run network-tmux.sh
alias nt="network-tmux.sh"

# run homeserver.sh
alias conn="ssh-mux.sh"

# run dev-tmux.sh
